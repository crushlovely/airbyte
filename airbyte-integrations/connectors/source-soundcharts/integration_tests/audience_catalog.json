{
  "streams": [
    {
      "stream": {
        "name": "library_artists",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "required": ["platformCode", "identifier", "artist"],
          "properties": {
            "platformCode": {
              "type": "string"
            },
            "identifier": {
              "type": "string"
            },
            "artist": {
              "type": "object",
              "required": ["uuid", "slug", "name", "appUrl", "imageUrl"],
              "properties": {
                "uuid": {
                  "type": "string"
                },
                "slug": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "appUrl": {
                  "type": "string"
                },
                "imageUrl": {
                  "type": ["null", "number"]
                }
              }
            }
          }
        },
        "supported_sync_modes": ["full_refresh"]
      },
      "sync_mode": "full_refresh",
      "destination_sync_mode": "overwrite"
    },
    {
      "stream": {
        "name": "platforms_social",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "required": ["name", "code"],
          "properties": {
            "name": {
              "type": "string"
            },
            "code": {
              "type": "string"
            }
          }
        },
        "supported_sync_modes": ["full_refresh"]
      },
      "sync_mode": "full_refresh",
      "destination_sync_mode": "overwrite"
    },
    {
      "stream": {
        "name": "artist_audience",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "required": ["artist_uuid", "platform_code", "date"],
          "properties": {
            "artist_uuid": {
              "type": "string"
            },
            "platform_code": {
              "type": "string"
            },
            "date": {
              "type": "string",
              "format": "date-time"
            },
            "likeCount": {
              "type": ["null", "integer"]
            },
            "followerCount": {
              "type": ["null", "integer"]
            },
            "followingCount": {
              "type": ["null", "integer"]
            },
            "postCount": {
              "type": ["null", "integer"]
            },
            "viewCount": {
              "type": ["null", "integer"]
            }
          }
        },
        "supported_sync_modes": ["full_refresh"]
      },
      "sync_mode": "incremental",
      "destination_sync_mode": "append"
    }
  ]
}
