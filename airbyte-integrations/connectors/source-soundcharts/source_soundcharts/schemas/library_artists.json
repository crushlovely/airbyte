{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["platformCode", "identifier", "artist"],
  "properties": {
    "platformCode": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "artist": {
      "type": "object",
      "required": ["uuid", "slug", "name", "appUrl", "imageUrl"],
      "properties": {
        "uuid": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "appUrl": {
          "type": "string"
        },
        "imageUrl": {
          "type": ["null", "number"]
        }
      }
    }
  }
}
